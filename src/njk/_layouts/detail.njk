{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4 left-rail">
      <img src="assets/img/members/{{ members.image }}" class="img-fluid" alt="Responsive image">
      <p> <h4> Tenure:</h4> {{members.tenure}} </p>
      <p> <h4> Instruments: </h4>{{members.instruments}}</p>
     <p><h4> Birth: </h4> {{ members.birthdate}} </p> <p> {{members.birthplace}}</p>
    </div>
    
    <div class="col-sm-8">
      <h1> {{ members.name }} </h1> 
       {{ members.text | safe}}
     
      {# <p>{{ members.text | safe}}</p> #}
    </div>
  </div>
</article>
{% endblock %}
